{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/packages/go-server/main.go",
            "cwd": "${workspaceFolder}/packages/go-server/",
            "env": {
                "GO111MODULE": "on",
                "GOPATH": "${env:GOPATH}",
                "GOROOT": "${env:GOROOT}",
                "APP_ENV": "development"
            },
            "args": [],
            "showLog": true
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}",
            "showLog": true
        }
    ]
}
