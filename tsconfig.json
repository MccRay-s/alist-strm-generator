{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "packages/web/src/*"
      ],
      "@server/*": [
        "packages/server/src/*"
      ]
    }
  },
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}